{
    "manifest_version": 2,
    "name": "Gmail邮箱附件处理助手",
    "version": "1.5",
    "description": "查询邮箱内全部附件，支持批量下载，支持批量添加至最新的草稿。要开始使用，在登录Gmail后，点击地址栏右端图标，选择“授权”即可。",
		"icons": {
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
		
  "page_action": {  
		 "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
		"default_title" : "Gmail邮箱附件处理助手",
		"default_popup": "popup.html"
	},
	
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	
	"content_scripts":  [
		{
			"js": ["oauth2/oauth2_inject.js"],
			"matches": [ "http://www.google.com/robots.txt*"],
			"run_at": "document_start"
		},
		{
			"js": [ "load.js", "test/test5.js" ],
			"css": ["css/component.css"],
			"matches": ["*://mail.google.com/*"],
			"run_at": "document_end"
		}
	],
	 
	"content_security_policy":
		"script-src 'self' https://apis.google.com https://rawgit.com 'unsafe-eval'; object-src 'self'",
	
	"permissions" : [
		"declarativeContent",
		"downloads",
		"*://mail.google.com/*",
		"https://accounts.google.com/o/oauth2/token",
		"https://www.googleapis.com/"
	],
	
	"web_accessible_resources" : [
    "oauth2/oauth2.html"
  ]
}
